{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "jsxImportSource": "react",
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@controller/*": ["src/controller/*"]
        },
        "experimentalDecorators": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}