{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "isolatedModules": true,
        "plugins": [
        ],
        "baseUrl": ".",
        "paths": {
            "@app/*": ["app/*"],
            "@shd/*": ["shared/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
